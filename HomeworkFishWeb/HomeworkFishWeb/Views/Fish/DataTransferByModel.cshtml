@model Fish[]
@{
    ViewBag.Title = "Fish Information with modeltransfer";
    }
    <span>Fish info:</span>
@*{
    ViewData["Name"] = "Carp";
    ViewBag.Weight = "10kg";
    }
    *@

<ul>
    @for (int i = 0; i < Model.Length; i++)
    {
        @if (i == 0)
        {
        <li>
            @("Name: " + ViewData["Carp"] + " Weight: " + Model[i].Weight + " Speed: " + Model[i].Speed);
        </li>
        }

        @if (i == 2)
        {   
        <li>
            @("Name: " + Model[i].Name + " Weight: " + ViewBag.Ten + " Speed: " + Model[i].Speed);
        </li>
        }

        @if (i != 0 && i != 2)
        {
        <li>
            @("Name: " + Model[i].Name + " Weight: " + Model[i].Weight + " Speed: " + Model[i].Speed)
        </li>  
        }
    }
</ul>
